@using System.Web.Optimization;
@using System.Web.Optimization.Contrib;

@{
    BundleTable.EnableOptimizations = true;
    var bundles = BundleTable.Bundles;

    bundles.Add(new AjaxMinScriptBundle("~/bundles/main")
        .Include("~/scripts/jquery-{version}.js")
        .Include("~/scripts/knockout-{version}.js"));
        
    bundles.Add(new AjaxMinScriptBundle("~/bundles/requireJs")
        .Include("~/scripts/jquery-{version}.js", new ModuleNameTransform("jquery"))
        .Include("~/scripts/domReady.js", new ModuleNameTransform("domReady"))
        .Include("~/scripts/knockout-{version}.js", new ModuleNameTransform("knockout")));
}